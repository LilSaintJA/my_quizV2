{% extends "::base.html.twig" %}

{% block title %}{{ quiz.nom }}{% endblock %}

{% block body %}
    <header class="header header-questions quiz-{{ quiz.id }}"></header>
    <div class="container">
        <h1 class="title-category-{{ quiz.id }} title-quizz">{{ quiz.nom }}</h1>
        <div class="row row-quiz">
            <form action="{{ path('quiz', { id: quiz.id }) }}" method="POST">
                {% for q in ask %}
                    <div class="form-group">
                        <p>{{ q.questions }}</p>
                        {% for r in q.reponse %}
                            <div class="form-check">
                                <input type="radio" name="{{ r.idQuestion }}" class="input-quiz" id="{{ r.id }}" value="{{ r.id }}">
                                {#<input type="hidden" name="{{ r.status }}" value="{{ r.status }}">#}
                                <label for="{{ r.id }}" class="label-quiz label">{{ r.nom }}{{ r.status }}</label>
                                <div class="check check"></div>
                            </div>
                        {% endfor %}
                    </div>
                {% endfor %}
                <button type="submit" class="btn btn-quiz">Envoyer</button>
            </form>
        </div>
    </div>
{% endblock %}
