{% extends "::base.html.twig" %}

{% block title %}{{ quiz.name }}{% endblock %}

{% block body %}
    <header class="header header-questions {{ quiz.name|replace({" ": "-"}) }} z-depth-1"></header>
    <div class="container">
        <div class="col s12">
            <h1 class="title-category-{{ quiz.id }} title-quizz">{{ quiz.name }}</h1>
            <div class="row row-quiz">
                {{ form_start(form, {'action': path('quiz_correction', { id: quiz.id })}) }}
                {% set i = 0 %}
                {% for q in ask %}
                    {% set i = i + 1 %}
                    <div class="form-group">
                        <p>{{ i }} - {{ q.statement }}</p>
                        {% for r in q.answer %}
                            <div class="form-check">
                                <input type="radio" name="{{ r.idQuestion }}" class="input-quiz" id="{{ r.id }}" value="{{ r.id }}">
                                <label for="{{ r.id }}" class="label-quiz-radioBtn label">{{ r.statement }}</label>
                                <div class="check check"></div>
                            </div>
                        {% endfor %}
                    </div>
                {% endfor %}
                {{ form_widget(form.Envoyer) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
